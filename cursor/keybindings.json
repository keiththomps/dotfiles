// Place your key bindings in this file to override the defaults
[
    // Enable Ctrl+\ to simulate Escape in vim panes
    {
        "key": "ctrl+\\",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.active"
    },

    // Terminal keyboard scrolling
    {
        "key": "alt+k",
        "command": "workbench.action.terminal.scrollUp",
        "when": "terminalFocus"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.terminal.scrollDown",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+b",
        "command": "workbench.action.terminal.scrollUpPage",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+f",
        "command": "workbench.action.terminal.scrollDownPage",
        "when": "terminalFocus"
    }

    // Improved navigation between Editor and terminal
    {
        "key": "ctrl+a j",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+a h",
        "command": "workbench.action.focusLeftGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+a l",
        "command": "workbench.action.focusRightGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+a k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },

    // Re-enabled Ctrl-A behavior in the terminal
    {
        "key": "ctrl+a ctrl+a",
        "command": "workbench.action.terminal.sendSequence",
        "args": {"text": "\u0001"},
        "when": "terminalFocus"
    },

    // Terminal navigation similiar to windows in Tmux
    {
        "key": "ctrl+a [",  // or any key combo you prefer
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a ]",  // or any key combo you prefer
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a 1",  // Switch to specific terminal
        "command": "workbench.action.terminal.focusAtIndex1",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a 2",  // Switch to specific terminal
        "command": "workbench.action.terminal.focusAtIndex2",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a 3",  // Switch to specific terminal
        "command": "workbench.action.terminal.focusAtIndex3",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a 4",  // Switch to specific terminal
        "command": "workbench.action.terminal.focusAtIndex4",
        "when": "terminalFocus"
    },
]

{
  "name": "test-runner",
  "displayName": "Test Runner",
  "description": "Run current or last test file",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.runTestFile"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runTestFile",
        "title": "Run Test File"
      }
    ],
    "keybindings": [
      {
        "command": "extension.runTestFile",
        "key": ";",
        "when": "editorTextFocus && vim.mode != 'Insert'"
      }
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
